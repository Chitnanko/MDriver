<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtName"
        style="@style/editStyle"
        android:text="Start Pin"/>
    <TextView
        style="@style/editStyle"
        android:id="@+id/txtPlace"
        android:layout_below="@+id/txtName"
        android:text="Bokyoge Street, Sein Pann Pyar road"/>

    <View
        android:id="@+id/tvView"
        android:layout_below="@+id/txtPlace"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#000" />
    <TextView
        style="@style/editStyle"
        android:id="@+id/txtNN"
        android:layout_below="@+id/tvView"
        android:text="Stop Pin"/>


    <TextView
        style="@style/editStyle"
        android:id="@+id/txtEnd"
        android:layout_below="@+id/txtNN"
        android:text="Bokyoge Street, Sein Pann Pyar road"/>

        <LinearLayout
            android:id="@+id/layouttext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtEnd"
            android:weightSum="2"
            android:background="#000">
            <TextView
                android:id="@+id/txtTakeKilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_weight="1"
                android:text="Kilometer"/>
            <TextView
                android:id="@+id/txtTotalcost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:layout_weight="1"
                android:text="Cost"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layouttext"
        android:weightSum="2">

        <Button
            android:id="@+id/btnOk"
            style="@style/button_style"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="Accept" />

        <Button
            android:id="@+id/btnCancel"
            style="@style/button_style"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="Reject" />
    </LinearLayout>

</RelativeLayout>
